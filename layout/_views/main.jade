doctype html
html
  head
    include head
  body
    header.head
      h1.head-title.u-fl: a(href = config.root)
        if config.title_img
          img(src = config.title_img)
        else
          = config.title
      include nav
    main.main
      block main
    footer.foot
      div.foot-copy.u-fl
        != '&copy; ' + date(new Date(), 'YYYY') + ' ' + (config.author || config.title)
        
        if theme.themes_mata
          bdi
            != theme.themes_mata
      div.u-fl.badge-outside
        a(href='https://playmusic.app.goo.gl/?ibi=com.google.PlayMusic&amp;isi=691797987&amp;ius=googleplaymusic&amp;apn=com.google.android.music&amp;link=https://play.google.com/music/m/Ihwsr75yewhfa4uqmuv2tda6l2a?t%3D%25E5%25BC%25A6%25E7%2590%25B4%25E9%259F%25B3%25E8%2595%25B4%26pcampaignid%3DMKT-na-all-co-pr-mu-pod-16' rel='nofollow')
          img.badge(height='45px' alt='Listen on Google Play Music' src='https://play.google.com/intl/en_us/badges-music/images/badges/en_badge_web_music.png')
        a(href="https://itunes.apple.com/us/podcast/%E5%BC%A6%E7%90%B4%E9%9F%B3%E8%95%B4/id1165704782?mt=2&app=podcast" rel='nofollow')
          img.badge(height='45px' src='https://linkmaker.itunes.apple.com/assets/shared/badges/en-us/podcast-lrg.svg')
      block menu
    include foot