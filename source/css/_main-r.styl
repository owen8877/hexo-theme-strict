@media (min-width: 768px) and (max-width: 979px)
  body
    margin: 30px
  .head
  .main
  .foot
    width: 100%
  .head
    padding: 20px
    height: auto
    line-height: inherit
  .head-title
  .head-nav
    float: none
  .head
    margin-top: 0
    text-align: center
  .foot
    margin-bottom: 0
  .head-nav
    margin-top: 10px
  .post__podcast__image
    margin: -60px -60px 20px -60px
    > img
      max-width: 100%;
      width: 500px;
      display: block;
      margin-left: auto;
      margin-right: auto;
      float: none;

@media (max-width: 767px)
  body
    margin: 20px
  .head
  .main
  .foot
    width: 100%
  .head
  .foot
    padding: 20px
    height: auto
    line-height: inherit
  .head-title
  .head-nav
  .foot-copy
  .page-menu
    float: none
  .main
    margin-top: 20px
    margin-bottom: 20px
  .head
    margin-top: 0
    text-align: center
  .head-nav
    margin-top: 10px
  .head-nav__item
    margin: 0 10px
    margin-left: 0
  .post
    margin-top: 20px
  .post__head
  .post__main
    margin: 40px
  .post__title
    margin-top: 2px
  .post__main
    blockquote
    .highlight
      margin: 30px -40px;
      padding: 20px 40px;
  .post__foot
    position: relative
    padding: 10px
  .post__tag
    display: none
  .post__more
    box-sizing: border-box;
    width: 100%;
    text-align: center;
  .post__podcast__image
    margin: -40px -40px 20px -40px
    > img
      max-width: 100%;
      width: 500px;
      display: block;
      margin-left: auto;
      margin-right: auto;
      float: none;
  .post__image
    margin: 20px -20px
    img
      margin 0 auto
  .foot
    margin-bottom: 0
    text-align: center
  .page-menu
    margin-top: 10px
  .foot bdi
    display: none
  .archive-title
    margin: 20px
  .badge-outside
    margin-top: 10px
    float: none